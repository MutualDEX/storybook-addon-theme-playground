{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es5", "es6", "dom"],
    "jsx": "react",
    "types": ["node"],
    "declarationDir": "dist",
    "outDir": "dist",
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
